<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hospital.mapper.MediMapper">


    <select id="mediList" resultType="com.hospital.entity.Medicine">
        SELECT `id`,`mNo`,`mName`,`mSize`,`stock`,`mSell`,`mBuy`,`mFactory`,`status`,`createTime`
        FROM `medicine`
        WHERE 1=1
        <if test="type!=null and type!=''">
            AND `mType`=#{type}
        </if>
       <if test="name!='' and name!=null">
           AND `mName`LIKE CONCAT('%',#{name},'%')
       </if>
    </select>
</mapper>